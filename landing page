  function Logo({ size = "md" }: { size?: "sm" | "md" | "lg" }) {

    return (
      <span className={`font-display font-bold tracking-tight ${sizes[size]}`}>
        <span className="bg-gradient-to-r from-rose-400 to-pink-500 bg-clip-text text-
  transparent">HER</span>
        <span className="text-white">izon</span>
      </span>
  }

  function OrbitLogo() {
    return (
      <div className="relative mx-auto flex h-24 w-24 items-center justify-center">
        <div className="absolute inset-0 rounded-full border border-rose-300/45
  [animation:spin_16s_linear_infinite]" />
        <div className="absolute inset-[7px] rounded-full border border-cyan-300/30
  [animation:spin_20s_linear_infinite_reverse]" />
        <span className="absolute -top-1 left-1/2 h-1.5 w-1.5 -translate-x-1/2 rounded-
  full bg-rose-300" />
        <span className="absolute bottom-2 right-2 h-1.5 w-1.5 rounded-full bg-sky-
  300" />
        <Logo size="sm" />
      </div>
    );
  }

  export default function LandingPage() {
    const router = useRouter();
    const [activeFact, setActiveFact] = useState(0);

    useEffect(() => {
      const introTimer = window.setTimeout(() => setPhase("main"), 2400);
      return () => window.clearTimeout(introTimer);
    }, []);

    useEffect(() => {
      if (phase !== "main") return;
        setActiveFact((prev) => (prev + 1) % KEY_FACTS.length);
      }, 3200);
      return () => window.clearInterval(factTimer);
    }, [phase]);

    return (
      <main className="relative min-h-screen w-full overflow-hidden bg-black text-
  white">
        <AnimatePresence>
          {phase === "intro" && (
            <motion.section
              initial={{ opacity: 1 }}
              exit={{ opacity: 0 }}
              transition={{ duration: 0.8, ease: "easeInOut" }}
